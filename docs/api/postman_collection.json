{
  "info": {
    "name": "Timeless Love API",
    "description": "Postman collection for Timeless Love backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Adult",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"adult@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"display_name\": \"Adult User\",\n  \"family_name\": \"Test Family\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register/adult",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register", "adult"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                  "    pm.collectionVariables.set('refresh_token', jsonData.refresh_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"adult@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                  "    pm.collectionVariables.set('refresh_token', jsonData.refresh_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Memories",
      "item": [
        {
          "name": "Create Memory",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Family Vacation 2024\",\n  \"description\": \"Amazing trip to the beach\",\n  \"memory_date\": \"2024-07-15\",\n  \"location\": \"Beach Resort\",\n  \"tags\": [\"vacation\", \"beach\"],\n  \"status\": \"published\",\n  \"media\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/memories",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "memories"]
            }
          }
        },
        {
          "name": "Get Memory",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/memories/:memory_id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "memories", ":memory_id"],
              "variable": [
                {
                  "key": "memory_id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "List Memories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/memories?status=published",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "memories"],
              "query": [
                {
                  "key": "status",
                  "value": "published"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Feed",
      "item": [
        {
          "name": "Get Feed",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/feed?page=1&page_size=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "feed"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Create Reaction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emoji\": \"üëç\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/feed/memories/:memory_id/reactions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "feed", "memories", ":memory_id", "reactions"],
              "variable": [
                {
                  "key": "memory_id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is a great memory!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/feed/memories/:memory_id/comments",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "feed", "memories", ":memory_id", "comments"],
              "variable": [
                {
                  "key": "memory_id",
                  "value": ""
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Invites",
      "item": [
        {
          "name": "Create Invite",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teen@example.com\",\n  \"role\": \"teen\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/invites",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "invites"]
            }
          }
        }
      ]
    }
  ]
}

