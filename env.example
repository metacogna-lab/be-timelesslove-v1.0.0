# Timeless Love Backend - Environment Variables Template
# 
# Copy this file to .env.local for local development or .env.production for production

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Required: Get these from your Supabase project dashboard
# https://app.supabase.com -> Project Settings -> API

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Optional: Database connection for LangGraph (Transaction Pooler - Port 6543)
SUPABASE_DB_URL=postgresql://postgres.abc123:password@aws-0-us-west-1.pooler.supabase.com:6543/postgres
SUPABASE_DB_PASSWORD=your-database-password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Required: Generate a strong secret key (minimum 32 bytes)
# Generate with: openssl rand -hex 32

JWT_SECRET_KEY=your-minimum-32-byte-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

ENVIRONMENT=development
DEBUG=true
API_VERSION=v1

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173

# =============================================================================
# MEDIA PROCESSING CONFIGURATION
# =============================================================================

MEDIA_MAX_FILE_SIZE_MB=50
MEDIA_MAX_MEMORY_SIZE_MB=200
MEDIA_THUMBNAIL_SIZE=400
MEDIA_UPLOAD_URL_EXPIRES_SECONDS=300
MEDIA_ACCESS_URL_EXPIRES_SECONDS=3600

# Storage bucket name
STORAGE_BUCKET_NAME=memories

# =============================================================================
# CLOUDFLARE TUNNEL (Production Only)
# =============================================================================
# Optional: Cloudflare Tunnel token for production deployment
# Get from: https://dash.cloudflare.com -> Zero Trust -> Access -> Tunnels

CLOUDFLARE_TUNNEL_TOKEN=

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production, override these values:

# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# JWT_SECRET_KEY=<generate-strong-production-key>
# CLOUDFLARE_TUNNEL_TOKEN=<production-tunnel-token>

